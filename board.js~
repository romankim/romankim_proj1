    
var Board = function(x_grids, y_grids) {
    var grid_array = [];
    
    for (i = 0; i < x_grids; i++) {
        grid_array[i] = [];
        for (j = 0; j < y_grids; j++) {
            grid_array[i][j] = false;
        }
    }
    
    return {
       x_grids : x_grids,
       y_grids : y_grids,
       grid_array : grid_array
    }
}
